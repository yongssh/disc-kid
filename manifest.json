{
    "manifest_version": 2,
    "name": "Greeting Extension",
    "version": "1.0",
    "description": "A simple Chrome extension to greet users.",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html"
      },
    
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources": ["popup.html", "popup.js", "popup.css"]
  }
  